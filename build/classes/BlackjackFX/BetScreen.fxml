<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="BlackjackFX.BetScreenController">
   <children>
      <VBox layoutX="205.0" layoutY="86.0" prefHeight="200.0" prefWidth="170.0">
         <children>
            <Label fx:id="playerbankLabel" text="Player Bank" />
            <Label fx:id="bankAmountLabel" text="Label" />
            <Button fx:id="enterBetButton" mnemonicParsing="false" onAction="#enterBetButtonPress" text="Enter Bet" />
            <TextField fx:id="betField" onKeyTyped="#betFieldTyped" />
            <Label fx:id="messageLabel" prefHeight="18.0" prefWidth="189.0" text="Label" />
         </children>
      </VBox>
      <Button fx:id="savegameButton" layoutX="519.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleSaveGameButton" text="Save Game" />
      <Button layoutX="519.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleMainMenuButton" text="Main Menu" />
   </children>
</AnchorPane>
